    <section id="section__intro" class="pad__lr__10 pad__tb__10 fadeInOut">
        <div class="column__1 max1400 flex__align__c">
            <h3 class="identificador">{{ item.introH3 }}</h3>
            <h2>{{ item.introH2 }}</h2>
        </div>
        <div class="column__2">
            <div class="col__left width__45">
                <img class="grano grano1" src="/images/home_grano1.png" data-speed="1.2" />
                <img class="grano grano2" src="/images/home_grano2.png" data-speed="0.8" />
                {% if item.introImg1 %}
                    <picture class="img__anim intro__img radius__30">
                        {% for format, images in item.introImg1 %}
                        <source srcset="{{ images | srcset }}" sizes="(max-width: 900px) 100vw, 900px" type="image/{{ format }}">
                        {% endfor %}
                        <img src="{{ item.introImg1.jpeg[0].url }}" alt="{{ item.introImg1Alt }}">
                    </picture>
                {% endif %}
            </div>
            <div class="col__right width__55">
                <div>{{ item.introRichText | safe }}</div>
                <a href="/nosotros/" class="btn arrow__right">{{ item.introBtn }}</a>
            </div>
        </div>
    </section>


    <section id="section__video" class="pad__lr__10">
        <img class="img__video__bg" src="/images/home_video.jpg" />
        <div class="column__2">
            <div class="grid__video"><span></span><span></span><span></span><span></span></div>
            <div class="col__left width__60">
                <h2>{{ item.videoH2 }}</h2>
            </div>
            <div class="col__right width__40">
                {% if item.video %}
                <a
                data-poster="{{ item.videoImg.poster.url }}"
                data-fslightbox="first-lightbox" href="{{ item.video.clip.url }}"
                class="video__btn">
                    <img src="/images/play_button.svg" alt="Maltas de calidad"/>
