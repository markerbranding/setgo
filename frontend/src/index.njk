    <section id="section__productos" class="pad__lr__10 pad__tb__5">
        <div class="column__1 max1400 flex__align__c">
            <h3 class="identificador">Productos destacados</h3>
            <h2>Maltas de máxima calidad</h2>
            <ul role="list" class="listado__x3 width__100 pad__top__5">
                {% for item in item.recentProdRef.recentProducts %}
                    {% include "producto-card.njk" %}
                {% endfor %}
            </ul>
            <a href="/productos/" class="btn arrow__right mar__top__5">Ver catálogo completo</a>
        </div>
    </section>


    <section id="section__blog" class="pad__lr__10">
        <div class="column__1 flex__align__c pad__tb__5">
            <h3 class="identificador">Noticias destacadas</h3>
            <h2>Artículos que te pueden interesar</h2>
            <ul role="list" class="listado__x4 width__100 pad__top__5">
                {% for item in item.recentBlogRef.recentBlogs %}
                    {% include "post-card.njk" %}
                {% endfor %}
            </ul>
        </div>
    </section>


    <section id="section__testimonios">
        <div class="column__1 pad__lr__10 pad__top__5">
            <h3 class="identificador">Testimonios</h3>
            <h2>Qué opinan nuestros clientes</h2>
        </div>
        <div class="column__1 draggable pad__tb__10 pad__lr__5">


            {% for testimonio in testimonios %}
            <div class="testimonio">
                <div>
                    <p>"{{ testimonio.testimony }}"</p>
                </div>
                <div>
                    <picture>
                        {% for format, images in testimonio.photo %}
                        <source srcset="{{ images | srcset }}" sizes="(max-width: 900px) 100vw, 900px" type="image/{{ format }}">
                        {% endfor %}
                        <img src="{{ testimonio.photo.jpeg[0].url }}" alt="{{ testimonio.introImg1Alt }}">
                    </picture>
                    <div class="testimonio__nombres">
                        <span>{{ testimonio.title }}</span>
                        <span>{{ testimonio.empresa }}</span>
                    </div>
                    
                </div>
            </div>
            {% endfor %}
            
        </div>
    </section>

    {% include 'pre-footer.njk' %}

{% endfor %}
</div>

<script>

    function myFunction(x) {
    if (x.matches) {

        // Mobile:
        
        document.addEventListener( 'DOMContentLoaded', function() {

        var splide = new Splide( '.splide',{
            heightRatio: 1,
            perPage: 1,
            focus: 'center',
            arrows: true,
            type: 'loop',
            autoplay: true,
        } );

        splide.mount();

        });
        //
        
    } else {
        
        // Desktop:
        
        document.addEventListener( 'DOMContentLoaded', function() {

        var splide = new Splide( '.splide',{
            heightRatio: 1,
            direction: 'ttb',
            perPage: 1,
            focus: 'center',
            arrows: true,
            type: 'loop',
            autoplay: true,
        } );

        splide.mount();

        });

    }
    }

    // Create a MediaQueryList object
    var x = window.matchMedia("(max-width: 1024px)")

    // Call listener function at run time
    myFunction(x);

    // Attach listener function on state changes
    x.addEventListener("change", function() {
    myFunction(x);
    });


    
</script>