---
eleventyComputed:
    title: "{{ articulo.titleseo }}"
    description: "{{ articulo.descseo }}"
    keywords: "{{ articulo.keyseo }}"
layout: base.njk
pagination:
  data: collections.articulos
  size: 1
  alias: articulo
permalink: "/articulos/{{ articulo.slug.current }}/"
---

<div data-barba="container" data-barba-namespace="articulo" data-css="articulo" data-js="articulo">

  <section id="section__hero" class="pad__lr__10 pad__bottom__5">
    <div class="column__2">

      <div class="col__left">
        <span class="categoria_articulo"><a href="/articulos/1/">Blog</a> / <a href="/articulos/categorias/{{articulo.categories | slugify}}">{{ articulo.categories | join(", ") }}</a> /</span>
        <h1>{{ articulo.title }}</h1>
        <p class="date__p">Escrito por {{ articulo.author }} y publicado el {{ articulo.publishedAt | date("d 'de' MMMM, yyyy", "es") }}</p>
        {% if articulo.mainImage %}
        <picture>
            {% for format, images in articulo.mainImage %}
            <source srcset="{{ images | srcset }}" sizes="(max-width: 1200px) 100vw, 1200px" type="image/{{ format }}">
            {% endfor %}
            <img src="{{ articulo.mainImage.jpeg[0].url }}" alt="{{ articulo.mainImage.altText }}">
        </picture>
        {% endif %}
        <div class="body__article">
          {{ articulo.body | safe }}
        </div>
        
      </div>
      
      <div class="col__right">
        <div class="sidebar">
          <h2>Temas</h2>
          <ul role="list">
            {% for cat in collections.categoriasBlog %}
            <li><a href="/articulos/categorias/{{ cat.slug.current }}">{{ cat.title }}</a></li>
            {% endfor %}
          </ul>
          <h2>Art√≠culos recientes</h2>
          <ul role="list">
            {% for art in collections.articulos | slice(5) %}
            <li><a href="/articulos/categorias/{{ cat.slug.current }}">{{ art.title }}</a></li>
            {% endfor %}
          </ul>
        </div>
      </div>

    </div>
  </section>

  
  {% include 'pre-footer.njk' %}
  

</div>